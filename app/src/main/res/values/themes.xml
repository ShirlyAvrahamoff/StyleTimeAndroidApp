<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.StyleTimeAndroidApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Theme.StyleTimeAndroidApp.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item> <!-- הרקע שלך -->
        <item name="windowSplashScreenAnimatedIcon">@null</item> <!-- ביטול האייקון של אנדרואיד -->
        <item name="postSplashScreenTheme">@style/Theme.StyleTimeAndroidApp</item>
    </style>

</resources>
